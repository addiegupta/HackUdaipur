<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <ImageView
       android:layout_width="120dp"
       android:layout_height="wrap_content"
       android:src="@drawable/namaste"
       android:id="@+id/iv_namaste"
       android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_namaste"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:id="@+id/tv_khama_gani"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="@string/khama_gani"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_start_medical_diagnosis"
        android:background="@color/colorAccent"
        android:padding="16dp"
        android:layout_marginTop="32dp"
        android:layout_below="@id/tv_khama_gani"
        android:text="@string/start_medical_diagnosis"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_main_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_person_add_white_24dp"
        app:fabSize="normal" />
</RelativeLayout>